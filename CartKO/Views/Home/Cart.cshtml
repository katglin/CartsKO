@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Cost</th>
        </tr>
    </thead>

    <tbody data-bind="foreach: Cart">
        <tr>
            <td data-bind="text: Product().Name"></td>
            <td data-bind="text: Amount"></td>
            <td>$<span data-bind="text: Cost().toFixed(2)"></span></td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td>Total</td>
            <td data-bind="text: TotalAmount"></td>
            <td>$<span data-bind="text: TotalCost"></span></td>
        </tr>
    </tfoot>
</table>